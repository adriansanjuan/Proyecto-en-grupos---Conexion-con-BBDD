<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
</head>
<body>
    <h1>P치gina Inscription</h1>
    <div>
        <% if(datosInscription && datosInscription.length > 0) { %> <!-- Verifica si hay inscripciones -->
            <% for(let inscription of datosInscription) { %>         <!-- Itera sobre las inscripciones -->
                <div>
                    <div>
                        <p>------------------------------</p>
                    </div>
                    <div>
                        <p>Usuario: 
                            <% const user = users.find(u => u.idUser === inscription.IdUser) %>
                            <%= user ? `${user.firstName} ${user.lastName}` : inscription.IdUser %>
                        </p>
                    </div>
                    <div>
                        <p>Id de la compa침ia: 
                            <% const company = companies.find(c => c._id.toString() === inscription.IdCompany.toString()) %>
                            <%= company ? company.name : inscription.IdCompany %>
                        </p>
                    </div>
                    <div>
                        <p>Fecha inicio: <%= inscription.FecIni %></p>  <!-- Muestra fecha de inicio -->
                    </div>
                    <div>
                        <p>Id: <%= inscription._id %></p>               <!-- Muestra ID de inscripci칩n -->
                    </div>
                    <div>
                        <p>Version <%= inscription.__v %></p>
                    </div>
                    <div>
                        <a href="<%= BaseURL %>inscription/edit/<%= inscription._id %>">Editar inscription</a> <!-- Enlace para editar -->
                    </div>
                    <div>
                        <form action="<%= BaseURL %>inscription/<%= inscription._id %>?_method=DELETE" method="POST" style="display: inline;"> <!-- Formulario para eliminar -->
                            <button type="submit">
                                Eliminar
                            </button>
                        </form>
                    </div>
                    <div>
                        <p>------------------------------</p>
                    </div>
                </div>
            <% } %>
        <% } else { %>                                                 <!-- Si no hay inscripciones -->
            <div>
                <p>No hay inscripciones disponibles</p>                <!-- Mensaje cuando no hay datos -->
                <p>------------------------------</p>
            </div>
        <% } %>
    </div>
    <div style="margin-top: 20px;">
        <a href="<%= BaseURL %>inscription/new">Nueva inscription</a>  <!-- Enlace para nueva inscripci칩n -->
    </div>
</body>
</html>